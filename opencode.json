{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"svelte": {
			"type": "local",
			"command": ["npx", "-y", "@sveltejs/mcp"]
		},
		"filesystem": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/Users/entussuenos/projects/websites/fullscopemedia.com"]
		},
		"web-search": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
			"env": {
				"BRAVE_API_KEY": "your-brave-api-key-here"
			}
		},
		"git": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-git", "/Users/entussuenos/projects/websites/fullscopemedia.com"]
		},
		"puppeteer": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-puppeteer"]
		},
		"fetch": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-fetch"]
		},
		"sqlite": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-sqlite"]
		},
		"postgres": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-postgres"],
			"env": {
				"POSTGRES_CONNECTION_STRING": "postgresql://user:password@localhost:5432/database"
			}
		},
		"github": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-github"],
			"env": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token-here"
			}
		},
		"slack": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-slack"],
			"env": {
				"SLACK_BOT_TOKEN": "your-slack-bot-token-here"
			}
		},
		"google-drive": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-gdrive"],
			"env": {
				"GOOGLE_CLIENT_ID": "your-google-client-id",
				"GOOGLE_CLIENT_SECRET": "your-google-client-secret"
			}
		},
		"memory": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-memory"]
		},
		"time": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-time"]
		},
		"calculator": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-calculator"]
		},
		"weather": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-weather"],
			"env": {
				"WEATHER_API_KEY": "your-weather-api-key-here"
			}
		},
		"docker": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-docker"]
		},
		"kubernetes": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-kubernetes"]
		},
		"npm-search": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-npm-search"]
		},
		"jira": {
			"type": "local",
			"command": ["npx", "-y", "@modelcontextprotocol/server-jira"],
			"env": {
				"JIRA_URL": "your-jira-instance-url",
				"JIRA_USERNAME": "your-jira-username",
				"JIRA_API_TOKEN": "your-jira-api-token"
			}
		}
	}
}
